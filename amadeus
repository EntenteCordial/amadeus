#!/bin/bash
# http://askubuntu.com/questions/94859/resizing-windows-to-a-particular-width-and-height-instantly
path=$(dirname "$0")
cd $path
echo '' > input.txt
wmctrl -r :ACTIVE: -e 0,10,500,890,100
nohup conky --config=amadeus.conf > /dev/null 2>&1 &
clear
while true; do
read -p"> " answer
echo $answer > input.txt
done
